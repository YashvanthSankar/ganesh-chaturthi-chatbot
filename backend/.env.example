# Lord Ganesha Voice Chatbot Configuration
# Copy this file to .env and configure your settings

# OpenAI API (optional, for backup LLM)
OPENAI_API_KEY=your_openai_api_key_here

# Hugging Face Token (optional, for private models)
HUGGINGFACE_TOKEN=your_hf_token_here

# Audio Configuration
MAX_AUDIO_SIZE_MB=50
SUPPORTED_AUDIO_FORMATS=webm,mp3,wav,m4a,ogg

# Model Configuration
ASR_MODEL_SIZE=base
LLM_MODEL_NAME=google/flan-t5-base
TTS_VOICE_SPEED=0.9
TTS_VOICE_PITCH=0.8

# Ganesha Voice Chatbot Configuration

# Server Configuration
DEBUG=True
HOST=0.0.0.0
PORT=8000

# Model Configuration
WHISPER_MODEL=base
LLM_MODEL=google/gemini-2.0-flash-exp:free
TTS_LANG_DEFAULT=en

# OpenRouter Configuration (Add your OpenRouter API key here)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# File Storage
UPLOAD_DIR=uploads
OUTPUT_DIR=outputs
MAX_FILE_SIZE=50000000

# Audio Configuration
SAMPLE_RATE=16000
AUDIO_FORMAT=wav

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]

# Logging
LOG_LEVEL=INFO
LOG_FILE=ganesha_chatbot.log

# Voice Enhancement
ENABLE_VOICE_EFFECTS=true
BASS_BOOST=true
REVERB_ENABLED=true
